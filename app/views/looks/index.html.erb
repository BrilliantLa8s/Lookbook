<p id="notice"><%= notice %></p>

<h1>Looks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Products</th>
      <th>Howto</th>
      <th>Occasion</th>
      <th>Feedback</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @looks.each do |look| %>
      <tr>
        <td><%= look.name %></td>
        <td><%= look.description %></td>
        <td><%= look.products %></td>
        <td><%= look.howto %></td>
        <td><%= look.occasion %></td>
        <td><%= look.feedback %></td>
        <td><%= look.album %></td>
        <td><%= link_to 'Show', look %></td>
        <td><%= link_to 'Edit', edit_look_path(look) %></td>
        <td><%= link_to 'Destroy', look, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Look', new_look_path %>
